<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="USER.details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.03"
            android:text="WELCOME!"
            android:textColor="#0d6e6a"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/flag_image"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginStart="150dp"
            android:background="@mipmap/ic_launcher" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pickCountry"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/buttonsquare"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:drawablePadding="10dp"
            android:text="Select Country" />

        <TextView
            android:id="@+id/countryNameTextView"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/f"
            android:hint="Select  Country"
            android:textAlignment="center"
            android:textColor="#0B0808"
            android:textColorHint="#39000000"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pickState"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonsquare"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:drawablePadding="10dp"
            android:text="Select State" />

        <TextView
            android:id="@+id/state_name"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/f"
            android:textColorHint="#39000000"
            android:hint="Select The State"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#120F0F"
            android:textSize="20sp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pick_city"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonsquare"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:drawablePadding="10dp"
            android:text="Select City" />

        <TextView
            android:id="@+id/city_name"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/f"
            android:textColorHint="#39000000"
            android:textAlignment="center"
            android:hint="Select The City"
            android:textStyle="bold"
            android:textColor="#020101"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:background="#393E46"
            android:text="check">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:text="Check Hospitals"
                android:textColor="#32E0C4"
                android:textSize="22sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp" />


</LinearLayout>



























