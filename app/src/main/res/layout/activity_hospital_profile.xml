<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="HOSPITAL.HospitalProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.03"
            android:text="PROFILE"
            android:textColor="#0d6e6a"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilephoto1"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_person_24"
        app:civ_border_color="@color/teal_200"
        app:civ_border_width="2dp">

    </de.hdodenhof.circleimageview.CircleImageView>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progressbar11"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/teal_200"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/username1"
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_border"
        android:hint="Enter  Hospital Name"
        android:inputType="text"
        android:focusable="false"
        android:drawableStart="@drawable/ic_baseline_local_hospital_24"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="#8F000000" />
    <EditText
        android:id="@+id/usernumber1"
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_border"
        android:hint="Enter Hospital Mobile Number"
        android:inputType="phone"
        android:drawableStart="@drawable/ic_baseline_phone_android_24"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="#8F000000" />
    <EditText
        android:id="@+id/useraddress1"
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_border"
        android:hint="Enter Hospital Address"
        android:inputType="textPostalAddress"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="#8F000000" />
    <EditText
        android:id="@+id/usermail1"
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:focusable="false"
        android:background="@drawable/round_border"
        android:hint="Enter Hospital E-Mail ID"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="#8F000000" />
    <Button
        android:id="@+id/profile1"
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonbackground"
        android:text="Save Profile"
        android:textColor="#fff" />





    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        app:lottie_fileName="health.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>



</LinearLayout>